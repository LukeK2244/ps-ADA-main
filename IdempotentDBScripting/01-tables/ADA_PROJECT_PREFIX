-- Table structure for table `ADA_PROJECT_PREFIX`
--

CREATE TABLE IF NOT EXISTS `ADA_PROJECT_PREFIX` (
  `PREFIX_ID` int(11) NOT NULL AUTO_INCREMENT,
  `PROJECT_ID` int(11) DEFAULT NULL,
  `OBJECT_TYPE` int(11) DEFAULT NULL,
  `NAMING_CONVENTION` varchar(255) DEFAULT NULL,
  `EXAMPLE` varchar(4000) DEFAULT NULL,
  `ADDITIONAL_INFO` varchar(4000) DEFAULT NULL,
  `IS_MANDATORY` bit(1) DEFAULT NULL,
  `ADHOC_OBJECT_TYPE` varchar(255) DEFAULT NULL,
  `NOT_APPLICABLE` bit(1) NOT NULL DEFAULT b'0',
  `IS_ACTIVE` bit(1) DEFAULT NULL,
  `CREATED_BY` varchar(255) DEFAULT NULL,
  `CREATED_ON` datetime(6) DEFAULT NULL,
  `UPDATED_BY` varchar(255) DEFAULT NULL,
  `UPDATED_ON` datetime(6) DEFAULT NULL,
  PRIMARY KEY (`PREFIX_ID`),
  KEY `ADA_PROJECT_PREFIX_PROJECT_ID_FK` (`PROJECT_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb3 COLLATE=utf8mb3_general_ci;

ALTER TABLE `ADA_PROJECT_PREFIX`
  ADD CONSTRAINT `ADA_PROJECT_PREFIX_PROJECT_ID_FK` FOREIGN KEY (`PROJECT_ID`) REFERENCES `ADA_PROJECT` (`PROJECT_ID`);
COMMIT;

CALL IDEM_SP_DDL_UTIL_ADD_FIELD_IF_NOT_EXISTS ('ADA_PROJECT_PREFIX', 'VERSION_ID', 'INT(11) DEFAULT NULL', 'EXAMPLE');

